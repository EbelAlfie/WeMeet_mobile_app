<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pamphletImageView"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/placeholder" />

    <Button
        android:id="@+id/defaultimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/defImg"
        android:fontFamily="@font/playfairdisplayregular"
        android:textColor="@color/black" />

    <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="@string/title" />

    <EditText
            android:id="@+id/editTextPembicara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Speaker" />

        <EditText
            android:id="@+id/editText_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="15dp"
            android:hint="Date"
            android:inputType="datetime" />

        <EditText
            android:id="@+id/editText_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="15dp"
            android:hint="Time"
            android:inputType="datetime" />

        <EditText
            android:id="@+id/editText_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fee"
            android:textSize="15dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Link registrasi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="E-Certificate:"
            android:textColor="#090707"
            android:textSize="17dp" />

        <RadioGroup
            android:id="@+id/radioCertStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/unAvailableRadiobtn">
            <RadioButton
                android:id="@+id/availableRadiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/radio_selector"
                android:button="@drawable/null_radio_select"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Available"
                android:textColor="@drawable/radio_text_selector"></RadioButton>

            <RadioButton
                android:id="@+id/unAvailableRadiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/radio_selector"
                android:button="@drawable/null_radio_select"
                android:paddingHorizontal="8dp"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Unavailable"
                android:textColor="@drawable/radio_text_selector"></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_updateWebinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/playfairdisplayregular"
        android:textColor="@color/black"
        android:text="Post Webinar" />

</LinearLayout>