<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerificationActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24" />

        <TextView
            android:id="@+id/template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/playfairdisplayregular"
            android:text="Verification link has been sent to your email! If you press the login button or exit the app before the email validation, you will have to register your account again!"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text_didntReceiveEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/playfairdisplayregular"
            android:text="Resend email verification link"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/playfairdisplayregular"
            android:textColor="@color/black"
            android:text="@string/btn_loginback" />
    </LinearLayout>

</FrameLayout>